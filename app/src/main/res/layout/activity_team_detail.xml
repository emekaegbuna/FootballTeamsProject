<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.teamDetail.TeamDetailActivity">

    <ImageView
            android:id="@+id/iv_teamdetail_logo"
            android:layout_width="127dp"
            android:layout_height="74dp"
            android:layout_below="@+id/iv_teamdetail_fanart"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="141dp" />

    <ImageView
            android:id="@+id/iv_teamdetail_fanart"
            android:layout_width="318dp"
            android:layout_height="122dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="45dp" />

    <TextView
            android:id="@+id/tv_team_detail_name"
            android:layout_width="244dp"
            android:layout_height="61dp"
            android:layout_below="@+id/iv_teamdetail_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="82dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="85dp"
            android:text="Belongs to "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>